<center>
    <h1 style="font-size: 3rem; margin: 30px; color: #f5ab45;">Shopping Cart</h1>
</center>

<table class="table" style="margin: auto; width: 80%; border-collapse: collapse; text-align: center; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <thead>
        <tr style="background-color: #f5f5f5;">
            <th style="border: 1px solid #ddd; padding: 15px; font-size: 2rem; font-weight: bold;">Item</th>
            <th style="border: 1px solid #ddd; padding: 15px; font-size: 2rem; font-weight: bold;">Price</th>
            <th style="border: 1px solid #ddd; padding: 15px; font-size: 1.2rem; font-weight: bold;"></th>
        </tr>
    </thead>
    <tbody>
        <% let total = 0 %>
        <% cart.forEach(elem => { %>
        <% total += Number(elem.price) %>
        <tr>
            <td style="border: 1px solid #ddd; padding: 15px; font-size: 1.5rem;"><%= elem.name %></td>
            <td style="border: 1px solid #ddd; padding: 15px; font-size: 1.5rem;">$<%= elem.price %></td>
            <td style="border: 1px solid #ddd; padding: 15px;">
                <a class="btn add-button" href="/cart/remove/<%= elem._id %>" style="text-decoration: none; color: #fff; background-color: #e74c3c; padding: 8px 16px; border-radius: 4px; font-size: 0.9rem;">Delete</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
    <tfoot>
        <tr style="background-color: #f5f5f5;">
            <td style="border: 1px solid #ddd; padding: 15px; font-size: 1.2rem; font-weight: bold;">Total</td>
            <td style="border: 1px solid #ddd; padding: 15px; font-size: 1.2rem; font-weight: bold;">$<%= total %></td>
            <td style="border: 1px solid #ddd; padding: 15px;"></td>
        </tr>
    </tfoot>
</table>
