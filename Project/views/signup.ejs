
<section class="contact" id="contact">
    <h1 class="heading">Sign Up</h1>
    <div class="row">
        <form action="" method="POST">

            <div class="inputBox">
                <span class="fas fa-user"></span>
                <input type="text" class="box" id="uname" name="name" placeholder="Name" required />
            </div>
            <div class="inputBox">
                <span class="fas fa-envelope"></span>
                <input type="text" class="box" id="mail" name="email" placeholder="Email" required />
            </div>
            <div class="inputBox">
                <span class="fas fa-phone"></span>
                <input type="text" class="box" id="phone" name="phone" placeholder="Mobile" required />
            </div>
            <div class="inputBox">
                <span class="fas fa-lock"></span>
                <input type="password" class="box" id="pass" name="password" placeholder="Password" required />
                
            </div>

            <input type="submit" value="Submit" id="submit" alt="submit" style="font-size: 20px; background-color: rgb(195, 114, 56); color: white;">
        </form>

    </div>    
</section>